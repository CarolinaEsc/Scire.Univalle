}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="~/css/login.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="~/js/loginScript.js"></script>
</head>
<body>
    <div>
        <h2> BIENVENIDO A SCIRE UNIVALLE </h2>
        <div class="container" id="container">
            <!--******** SIGN UP *********-->
            <div class="form-container sign-up-container">
                <form id="form" action="#" method="post">
                    <h1>Crear cuenta</h1>
                    <span>
                        Registrate usando tu correo <br />
                    </span>
                    <input type="text" name="nameUP" placeholder="Nombre" onkeyup="convertupper()" id="name" required />
                    <input typeof="text" name="lastnameUP" placeholder="Apellido" id="lastname" required />
                    <input type="email" name="emailUp" placeholder="Correo" id="email" required />                   
                    <input type="password" name="passwordUP" placeholder="Contraseña" id="password" required />
                    <input type="password" name="passwordConfirmUP" placeholder="Confirme su contraseña" id="passwordConfirm" required />                   
                    <button type="submit" name="btnSignUp" onsubmit="signup()" ;>Registrarse</button>
                    <label>
                </form>
            </div> <!--Sign up-->

            <!--******** SIGN IN *********-->
            <div class="form-container sign-in-container">
                <form id="form" action="#" method="post">
                    <h1>Ingresar</h1>
                    <span>Ingresa con tu correo</span>
                    <input type="email" name="emailIN" placeholder="Correo" required />
                    <input type="password" name="passwordIN" placeholder="Contraseña" required id="pwd" onkeyup="validatePassword(this.value);" />
                    <span class="msg" id="msg"></span>
                    <a href="#">Olvido su contraseña?</a>
                    <button  type="submit" name="btnSignIn" onsubmit="signin()" ;>Ingresar</button>
                </form>
            </div> <!--Sign in-->


            <div class="overlay-container">
                <div class="overlay">
                    <div class="overlay-panel overlay-left">

                        <h1>Hola, Amigo!</h1>

                        <p>Adentrate en nuestra comunidad</p>
                        <button class="ghost" id="signIn">Ingresar</button>
                    </div>
                    <div class="overlay-panel overlay-right">
                        <h1>Bienvenido de nuevo!</h1>

                        <p> Ha pasado mucho tiempo </p>
                        <button class="ghost" id="signUp">Registrarse</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</body>
</html>
